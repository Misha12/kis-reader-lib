{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "es6",
      "ES2020",
      "ES2020.Promise",
      "ES2020.String",
      "DOM"
    ],
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}
